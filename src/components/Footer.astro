  .footer span, .footer div, .footer li, .footer ul, .footer ol {
    color: #ffffff !important;
  }
  
  /* Force all links to be white */
  .footer a, .footer a:visited, .footer a:link, .footer a:active {
    color: #ffffff !important;
  }
  
  .footer a:hover {
    color: #d1d5db !important;
  }
  
  /* Override ALL possible grey text classes */
  .footer .text-gray-100, .footer .text-gray-200, .footer .text-gray-300, 
  .footer .text-gray-400, .footer .text-gray-500, .footer .text-gray-600, 
  .footer .text-gray-700, .footer .text-gray-800, .footer .text-gray-900 {
    color: #ffffff !important;
  }
  
  /* Force all SVG elements to be white */
  .footer svg, .footer svg *, .footer svg path, .footer svg circle, .footer svg rect {
    fill: #ffffff !important;
    color: #ffffff !important;
    stroke: #ffffff !important;
  }
  
  /* Force all social media icons to be white */
