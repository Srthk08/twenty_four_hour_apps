    color: #ffffff !important;
  }
  
  /* Force all headings to be white */
  .footer h1, .footer h2, .footer h3, .footer h4, .footer h5, .footer h6 {
    color: #ffffff !important;
  }
  
  /* Force all list items to be white */
  .footer li, .footer ul li, .footer ol li {
    color: #ffffff !important;
  }
  
  /* Force copyright and legal text to be white */
  .footer .text-sm, .footer .text-xs {
    color: #ffffff !important;
  }
  
  /* Override any Tailwind text color utilities */
  .footer [class*="text-"] {
    color: #ffffff !important;
  }
  
  /* Force all elements with any color style to be white */
  .footer [style*="color"] {
    color: #ffffff !important;
  }
</style>

<script>
  // ULTRA AGGRESSIVE JAVASCRIPT FOOTER WHITE TEXT FIX
  document.addEventListener('DOMContentLoaded', function() {
    function forceFooterWhite() {
      const footer = document.querySelector('.footer');
      if (footer) {
        // Force all text elements to be white
        const allElements = footer.querySelectorAll('*');
        allElements.forEach(element => {
          element.style.setProperty('color', '#ffffff', 'important');
          element.style.setProperty('fill', '#ffffff', 'important');
          element.style.setProperty('stroke', '#ffffff', 'important');
        });
        
        // Force all SVG elements to be white
        const svgElements = footer.querySelectorAll('svg, svg *');
        svgElements.forEach(svg => {
          svg.style.setProperty('fill', '#ffffff', 'important');
          svg.style.setProperty('color', '#ffffff', 'important');
          svg.style.setProperty('stroke', '#ffffff', 'important');
          svg.setAttribute('fill', '#ffffff');
        });
        
        // Force all links to be white
        const links = footer.querySelectorAll('a');
        links.forEach(link => {
          link.style.setProperty('color', '#ffffff', 'important');
        });
        
        // Force all text elements to be white
        const textElements = footer.querySelectorAll('p, h1, h2, h3, h4, h5, h6, span, div, li, ul, ol');
        textElements.forEach(text => {
          text.style.setProperty('color', '#ffffff', 'important');
        });
      }
    }
    
    // Run immediately
    forceFooterWhite();
    
    // Run after a short delay to catch any dynamically loaded content
    setTimeout(forceFooterWhite, 100);
    setTimeout(forceFooterWhite, 500);
    setTimeout(forceFooterWhite, 1000);
    
    // Run on any DOM changes
    const observer = new MutationObserver(function(mutations) {
      mutations.forEach(function(mutation) {
        if (mutation.type === 'childList' || mutation.type === 'attributes') {
          forceFooterWhite();
        }
      });
    });
    
    const footer = document.querySelector('.footer');
    if (footer) {
      observer.observe(footer, {
        childList: true,
        subtree: true,
        attributes: true,
        attributeFilter: ['style', 'class']
      });
    }

    // Handle footer product links with role-based access control
    function handleFooterProductLinks() {
      const footerProductLinks = document.querySelectorAll('.footer-product-link');
      
      footerProductLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          
          const productSlug = this.getAttribute('data-product-slug');
          
          // Check if user is admin
          const isAdmin = checkIfUserIsAdmin();
          
          // If user is admin, allow access to all products
          if (isAdmin) {
            window.location.href = `/products/${productSlug}`;
            return;
          }
          
          // If user is not admin and product is not Order Menu System, show dialog
          if (productSlug !== 'order-menu-system') {
            if (window.showProductDialog) {
              window.showProductDialog();
            }
            return;
          }
          
          // If product is Order Menu System, allow access for all users
          window.location.href = `/products/${productSlug}`;
        });
      });
    }

    // Function to check if user is admin
    function checkIfUserIsAdmin() {
      try {
        // Check if user is logged in
        if (window.simpleAuthManager && window.simpleAuthManager.isUserLoggedIn()) {
          const currentUser = window.simpleAuthManager.getCurrentUser();
          
          // Check if user has admin role
          if (currentUser && currentUser.role === 'admin') {
            return true;
          }
        }
        
        // Check session storage for admin role
        const sessionData = sessionStorage.getItem('simple-auth-session');
        if (sessionData) {
          const session = JSON.parse(sessionData);
          if (session.user && session.user.role === 'admin') {
            return true;
          }
        }
        
        return false;
      } catch (error) {
        console.error('Error checking admin status:', error);
        return false;
      }
    }

    // Initialize footer product links
    handleFooterProductLinks();
    
    // Re-initialize when DOM changes (for dynamic content)
    const footerObserver = new MutationObserver(function(mutations) {
      mutations.forEach(function(mutation) {
        if (mutation.type === 'childList') {
          handleFooterProductLinks();
        }
      });
    });
    
    if (footer) {
      footerObserver.observe(footer, {
        childList: true,
        subtree: true
      });
    }
  });
</script>

