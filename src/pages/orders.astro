                <!-- Customization Details -->
                <div class="mb-6">
                  <h4 class="text-lg font-semibold text-gray-800 mb-3">Customization</h4>
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="bg-gray-50 rounded-lg p-4">
                      <h5 class="font-medium text-gray-700 mb-2">Selected Colors</h5>
                      <div class="flex space-x-2">
                        <div class="w-6 h-6 rounded-full border-2 border-gray-300 order-primary-color" style="background-color: #3B82F6;"></div>
                        <div class="w-6 h-6 rounded-full border-2 border-gray-300 order-secondary-color" style="background-color: #A5CF6;"></div>
                        <div class="w-6 h-6 rounded-full border-2 border-gray-300 order-accent-color" style="background-color: #F59E0B;"></div>
                        <div class="w-6 h-6 rounded-full border-2 border-gray-300 order-text-color" style="background-color: #1F2937;"></div>
                      </div>
                    </div>
                    
                    <div class="bg-gray-50 rounded-lg p-4">
                      <h5 class="font-medium text-gray-700 mb-2">Additional Features</h5>
                      <div class="space-y-1 order-features">
                        <span class="text-sm text-gray-600">No features selected</span>
                      </div>
                    </div>
                    
                    <div class="bg-gray-50 rounded-lg p-4">
                      <h5 class="font-medium text-gray-700 mb-2">Logo Uploaded</h5>
                      <div class="order-logo-status text-sm text-gray-600">No logo</div>
                    </div>
                  </div>
                </div>

                <!-- Additional Requirements -->
                <div class="mb-6">
                  <h4 class="text-lg font-semibold text-gray-800 mb-3">Additional Requirements</h4>
                  <div class="bg-gray-50 rounded-lg p-4">
                    <p class="text-gray-700 order-additional-requirements">No additional requirements specified</p>
                  </div>
                </div>

                <!-- Order Status -->
                <div class="border-t border-gray-200 pt-6 order-status-section">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                      <span class="text-green-700 font-medium">Order Completed</span>
                    </div>
                    <div class="text-sm text-gray-500">Order ID: <span class="order-id">-</span></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Order Details Modal -->
          <div id="order-details-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
            <div class="absolute inset-0 bg-black bg-opacity-40" id="order-modal-backdrop"></div>
            <div class="relative min-h-screen flex items-center justify-center p-4">
              <div class="relative max-w-2xl w-full mx-auto mt-8 mb-8 bg-white rounded-xl shadow-xl overflow-hidden">
                <div class="p-4 sm:p-6 border-b flex items-center justify-between">
                  <h3 class="text-lg sm:text-xl font-semibold text-gray-900 pr-2" id="order-modal-title">Order Details</h3>
                  <button type="button" id="order-modal-close" class="text-gray-500 hover:text-gray-700 text-2xl leading-none flex-shrink-0">âœ•</button>
                </div>
                <div class="p-4 sm:p-6 space-y-4 max-h-[calc(100vh-200px)] overflow-y-auto">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div class="flex-1">
                      <p class="text-xs sm:text-sm text-gray-500">Amount</p>
                      <p class="text-xl sm:text-2xl font-bold text-primary-600 break-words" id="order-modal-amount">â‚¹0</p>
                    </div>
                    <div class="flex-1 sm:text-right">
                      <p class="text-xs sm:text-sm text-gray-500">Date</p>
                      <p class="text-xs sm:text-sm font-medium text-gray-900 break-words" id="order-modal-date">-</p>
                    </div>
                  </div>
                  <div>
                    <p class="text-xs sm:text-sm text-gray-500 mb-1">Order ID</p>
                    <p class="text-xs sm:text-sm font-mono text-gray-800 break-all" id="order-modal-id">-</p>
                  </div>
                  <div>
                    <p class="text-xs sm:text-sm text-gray-500 mb-1">Project</p>
                    <p class="text-xs sm:text-sm text-gray-800 break-words" id="order-modal-desc">-</p>
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                      <h4 class="text-xs sm:text-sm font-semibold text-gray-800 mb-2">Contact</h4>
                      <div class="text-xs sm:text-sm text-gray-700 space-y-1 break-words">
                        <div>Person: <span id="order-modal-contact" class="break-words">-</span></div>
                        <div>Email: <span id="order-modal-email" class="break-all">-</span></div>
                        <div>Phone: <span id="order-modal-phone" class="break-words">-</span></div>
                      </div>
                    </div>
                    <div>
                      <h4 class="text-xs sm:text-sm font-semibold text-gray-800 mb-2">Restaurant</h4>
                      <div class="text-xs sm:text-sm text-gray-700 space-y-1 break-words">
                        <div>Name: <span id="order-modal-restaurant" class="break-words">-</span></div>
                        <div>Cuisine: <span id="order-modal-cuisine" class="break-words">-</span></div>
                      </div>
                    </div>
                  </div>
                  <div>
                    <h4 class="text-xs sm:text-sm font-semibold text-gray-800 mb-2">Additional Requirements</h4>
                    <p class="text-xs sm:text-sm text-gray-700 break-words whitespace-pre-wrap" id="order-modal-additional">-</p>
                  </div>
                </div>
                <div class="p-4 border-t bg-gray-50 flex justify-end sm:justify-end">
                  <button type="button" id="order-modal-close-bottom" class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 rounded-md bg-primary-600 text-white hover:bg-primary-700 transition-colors text-sm sm:text-base">Close</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </AuthGuard>
</Layout>

<script>
  // Authentication handled by AuthGuard component

  // Orders functionality
  class Orders {
    constructor() {
      this.orders = [];
      this.init();
    }

    init() {
      this.loadOrders().then(() => this.renderOrders());
    }

    async loadOrders() {
      // Load orders from multiple localStorage sources
      const projectRequirements = localStorage.getItem('project-requirements');
      const orderMenuRequirements = localStorage.getItem('order-menu-requirements');
      const userOrders = localStorage.getItem('user-orders');
      
      console.log('Loading orders from multiple sources...');
      console.log('Project requirements:', projectRequirements);
      console.log('Order menu requirements:', orderMenuRequirements);
      console.log('User orders:', userOrders);
      
      this.orders = [];
      
      // Get current user (from in-app auth or Supabase)
      let currentUser = window.globalAuthManager?.getCurrentUser() || window.simpleAuthManager?.getCurrentUser();
      console.log('Current user (app auth):', currentUser);
      
      if (!currentUser) {
        console.log('No current user found');
        // Try Supabase auth as a fallback
        try {
          const { supabase } = await import('../lib/supabase');
          const { data: { user } } = await supabase.auth.getUser();
          if (user) {
            currentUser = { email: user.email };
          }
        } catch (e) {
          console.warn('Supabase auth fallback failed:', e);
        }
        if (!currentUser) return;
      }

      // Normalize to a plain email string for downstream queries/filters
      const userEmail = currentUser?.email || null;
      if (!userEmail) {
        console.log('No user email available â€“ cannot load orders');
        return;
      }
      
      // Load project requirements as orders
      if (projectRequirements) {
        try {
          const projectOrders = JSON.parse(projectRequirements);
          projectOrders.forEach(order => {
            this.orders.push({
              ...order,
              orderId: `PROJ-${Date.now()}-${Math.random().toString(36).substr(2, 9)}`,
              orderDate: order.timestamp || new Date().toISOString(),
              total: this.extractPrice(order.productPrice) || 0,
              projectName: order.productName || 'Custom Project',
              description: order.productDescription || 'Professional digital solution',
              requirements: order,
              status: 'completed'
            });
          });
        } catch (error) {
          console.error('Error parsing project requirements:', error);
        }
      }
      
      // Load order menu requirements as orders
      if (orderMenuRequirements) {
        try {
          const orderMenuOrders = JSON.parse(orderMenuRequirements);
          orderMenuOrders.forEach(order => {
            this.orders.push({
              ...order,
              orderId: `MENU-${Date.now()}-${Math.random().toString(36).substr(2, 9)}`,
              orderDate: order.timestamp || new Date().toISOString(),
              total: this.extractPrice(order.productPrice) || 0,
              projectName: order.productName || 'Order Menu System',
              description: order.productDescription || 'Complete order management system',
              requirements: order,
              status: 'completed'
            });
          });
        } catch (error) {
          console.error('Error parsing order menu requirements:', error);
        }
      }
      
      // Load user orders (if any)
      if (userOrders) {
        try {
          const userOrdersData = JSON.parse(userOrders);
          const filteredOrders = userOrdersData.filter(order => order.userId === userEmail);
          this.orders.push(...filteredOrders);
        } catch (error) {
          console.error('Error parsing user orders:', error);
        }
      }

      // Load Supabase-backed orders and customizations for this user
      try {
        await this.loadSupabaseOrders(userEmail);
      } catch (e) {
        console.warn('Failed to load Supabase orders:', e);
      }
      
      // Sort newest first
      this.orders.sort((a, b) => new Date(b.orderDate).getTime() - new Date(a.orderDate).getTime());
      
      console.log('âœ… Total orders loaded:', this.orders.length);
      console.log('ðŸ“‹ Order IDs:', this.orders.map(o => o.orderId));
      console.log('ðŸ“‹ Order details:', this.orders.map(o => ({
        id: o.orderId,
        project: o.projectName,
        status: o.status,
        date: o.orderDate
      })));
    }

    async loadSupabaseOrders(userEmail) {
      try {
        const { supabase } = await import('../lib/supabase');
        console.log('ðŸ” Loading Supabase orders for email:', userEmail);
        
        // Fetch order_customizations (Order Menu System submissions)
        // Try both 'email' and 'user_email' field names to handle schema variations
        // Combine results from both queries to ensure we get all orders
        let customizations = [];
        let customizationsError = null;
        const seenIds = new Set(); // Track IDs to avoid duplicates
        
        // Try with 'email' field
        const { data: customizationsEmail, error: errorEmail } = await supabase
          .from('order_customizations')
          .select('*')
          .eq('email', userEmail)
          .order('created_at', { ascending: false });
        
        if (!errorEmail && customizationsEmail && customizationsEmail.length > 0) {
          customizationsEmail.forEach(cz => {
            if (!seenIds.has(cz.id)) {
              customizations.push(cz);
              seenIds.add(cz.id);
            }
          });
          console.log('âœ… Found', customizationsEmail.length, 'orders using "email" field');
        } else if (errorEmail) {
          console.log('âš ï¸ Error querying with "email" field:', errorEmail.message);
        }
        
        // Also try with 'user_email' field and combine results
        const { data: customizationsUserEmail, error: errorUserEmail } = await supabase
          .from('order_customizations')
          .select('*')
          .eq('user_email', userEmail)
          .order('created_at', { ascending: false });
        
        if (!errorUserEmail && customizationsUserEmail && customizationsUserEmail.length > 0) {
          customizationsUserEmail.forEach(cz => {
            if (!seenIds.has(cz.id)) {
              customizations.push(cz);
              seenIds.add(cz.id);
            }
          });
          console.log('âœ… Found', customizationsUserEmail.length, 'orders using "user_email" field');
        } else if (errorUserEmail) {
          console.log('âš ï¸ Error querying with "user_email" field:', errorUserEmail.message);
        }
        
        // Set error only if both queries failed
        if (errorEmail && errorUserEmail) {
          customizationsError = errorUserEmail || errorEmail;
          console.error('âŒ Both queries failed for order_customizations');
        }
        
        if (customizationsError) {
          console.warn('âš ï¸ Error loading order_customizations, continuing with other sources...', customizationsError);
        }
        
        // Sort combined results by created_at
        customizations.sort((a, b) => {
          const dateA = new Date(a.created_at || 0);
          const dateB = new Date(b.created_at || 0);
          return dateB - dateA; // Newest first
        });

        console.log('ðŸ“¦ Processing', customizations.length, 'order_customizations...');
        (customizations || []).forEach((cz, index) => {
          console.log(`  Order ${index + 1}:`, {
            id: cz.id,
            project_name: cz.project_name,
            email: cz.email || cz.user_email,
            status: cz.status
          });
          
          this.orders.push({
            orderId: cz.id || `OC-${Date.now()}-${index}`,
            orderDate: cz.created_at || new Date().toISOString(),
            total: Number(cz.total_amount) || 0,
            projectName: cz.project_name || 'Order Menu System',
            description: 'Order Menu System customization',
            status: cz.status || 'pending', // Read actual status from database
            requirements: {
              projectName: cz.project_name,
              contactPerson: cz.contact_person,
              restaurantName: cz.restaurant_name,
              cuisineType: cz.cuisine_type,
              email: cz.email || cz.user_email,
              phone: cz.phone_number,
              additionalRequirements: cz.additional_requirements,
              primaryColor: cz.primary_color,
              secondaryColor: cz.secondary_color,
              accentColor: cz.accent_color,
              textColor: cz.text_color
            }
          });
        });

        // Fetch cart_customizations (all orders, not just completed)
        const { data: carts, error: cartsError } = await supabase
          .from('cart_customizations')
          .select('*')
          .eq('user_email', userEmail)
          .in('cart_status', ['completed', 'pending', 'confirmed', 'in_progress', 'cancelled'])
          .order('updated_at', { ascending: false });
        
        if (cartsError) {
          console.error('âŒ Error loading cart_customizations:', cartsError);
          throw cartsError;
        }
        
        console.log('ðŸ“¦ Processing', (carts || []).length, 'cart_customizations...');
        (carts || []).forEach((cart, index) => {
          console.log(`  Cart ${index + 1}:`, {
            id: cart.id,
            project_name: cart.project_name,
            user_email: cart.user_email,
            cart_status: cart.cart_status
          });
          // Map cart_status to status, or use status field if it exists
          let orderStatus = cart.status || cart.cart_status || 'pending';
          // Normalize cart_status values to match order status values
          if (orderStatus === 'completed') {
            orderStatus = 'completed';
          } else if (orderStatus === 'cancelled') {
            orderStatus = 'cancelled';
          } else if (orderStatus === 'pending') {
            orderStatus = 'pending';
          } else if (orderStatus === 'confirmed') {
            orderStatus = 'confirmed';
          } else if (orderStatus === 'in_progress' || orderStatus === 'processing') {
            orderStatus = 'in_progress';
          }
          
          this.orders.push({
            orderId: cart.id || `CART-${Date.now()}`,
            orderDate: cart.updated_at || cart.created_at || new Date().toISOString(),
            total: Number(cart.total_amount) || 0,
            projectName: cart.project_name || 'Custom Project',
            description: cart.project_description || 'Project purchased',
            status: orderStatus, // Use actual status from database
            requirements: {
              projectName: cart.project_name,
              contactPerson: cart.contact_person,
              restaurantName: cart.restaurant_name,
              cuisineType: cart.cuisine_type,
              email: cart.user_email,
              phone: cart.phone_number,
              additionalRequirements: cart.additional_requirements,
              primaryColor: cart.primary_color,
              secondaryColor: cart.secondary_color,
              accentColor: cart.accent_color,
              textColor: cart.text_color
            }
          });
        });
      } catch (error) {
        console.error('Error loading Supabase orders:', error);
        throw error;
      }
    }
    
    extractPrice(priceString) {
      if (!priceString) return 0;
      const match = priceString.match(/â‚¹?([\d,]+)/);
      if (match) {
        return parseInt(match[1].replace(/,/g, ''));
      }
      return 0;
    }

    renderOrders() {
      const loadingOrders = document.getElementById('loading-orders');
      const emptyOrders = document.getElementById('empty-orders');
      const ordersList = document.getElementById('orders-list');

      console.log('Rendering orders. Orders count:', this.orders.length);

      // Hide loading immediately and show appropriate state
      loadingOrders?.classList.add('hidden');

      if (this.orders.length === 0) {
        console.log('No orders found, showing empty state');
        emptyOrders?.classList.remove('hidden');
        ordersList?.classList.add('hidden');
        // Hide recent activity when there are no orders
        const recentActivity = document.getElementById('recent-activity');
        recentActivity?.classList.add('hidden');
        return;
      }

      console.log('Orders found, showing orders list');
      emptyOrders?.classList.add('hidden');
      ordersList?.classList.remove('hidden');

      this.renderOrdersList();

      // Update recent summary visibility/content
      this.renderRecentSummary();
    }

    renderOrdersList() {
      const ordersListContainer = document.getElementById('orders-list');
      if (!ordersListContainer) return;

      ordersListContainer.innerHTML = '';
      
      this.orders.forEach((order, index) => {
        const orderElement = this.createOrderElement(order, index);
        ordersListContainer.appendChild(orderElement);
      });
    }

    createOrderElement(order, index) {
      const template = document.getElementById('order-template');
      if (!template) return document.createElement('div');

      const clone = template.cloneNode(true);
      clone.classList.remove('hidden');
      clone.id = `order-${index}`;

      // Set order details
      clone.querySelector('.order-project-name').textContent = order.projectName || 'Custom Project';
      clone.querySelector('.order-project-description').textContent = order.description || 'Professional digital solution';
      clone.querySelector('.order-total').textContent = `â‚¹${order.total?.toLocaleString() || '0'}`;
      clone.querySelector('.order-date').textContent = this.formatDate(order.orderDate);
      clone.querySelector('.order-id').textContent = order.orderId || `ORD-${Date.now()}`;

      // Set project details
      clone.querySelector('.order-custom-name').textContent = order.requirements?.projectName || '-';
      clone.querySelector('.order-contact-person').textContent = order.requirements?.contactPerson || '-';
      clone.querySelector('.order-restaurant-name').textContent = order.requirements?.restaurantName || '-';
      clone.querySelector('.order-cuisine-type').textContent = order.requirements?.cuisineType || '-';

      // Set contact information
      clone.querySelector('.order-email').textContent = order.requirements?.email || '-';
      clone.querySelector('.order-phone').textContent = order.requirements?.phone || '-';

      // Set colors
      if (order.requirements?.primaryColor) {
        clone.querySelector('.order-primary-color').style.backgroundColor = order.requirements.primaryColor;
      }
      if (order.requirements?.secondaryColor) {
        clone.querySelector('.order-secondary-color').style.backgroundColor = order.requirements.secondaryColor;
      }
      if (order.requirements?.accentColor) {
        clone.querySelector('.order-accent-color').style.backgroundColor = order.requirements.accentColor;
      }
      if (order.requirements?.textColor) {
        clone.querySelector('.order-text-color').style.backgroundColor = order.requirements.textColor;
      }

      // Set features
      const featuresContainer = clone.querySelector('.order-features');
      if (order.features && order.features.length > 0) {
        featuresContainer.innerHTML = order.features.map(feature => 
          `<span class="inline-block bg-primary-100 text-primary-800 text-xs px-2 py-1 rounded-full mr-2 mb-1">${feature}</span>`
        ).join('');
      }

      // Set logo status
      const logoStatus = clone.querySelector('.order-logo-status');
      if (order.logo) {
        logoStatus.innerHTML = '<span class="text-green-600">âœ“ Logo uploaded</span>';
      }

      // Set additional requirements
      const additionalReq = clone.querySelector('.order-additional-requirements');
      if (order.requirements?.additionalRequirements) {
        additionalReq.textContent = order.requirements.additionalRequirements;
      }

      // Update order status badge
      const statusBadge = clone.querySelector('.order-status-badge') || clone.querySelector('span.bg-green-100');
      if (statusBadge) {
        const statusText = (order.status || 'pending').charAt(0).toUpperCase() + (order.status || 'pending').slice(1).replace('_', ' ');
        const statusIcon = order.status === 'completed' ? 'âœ“ ' : order.status === 'cancelled' ? 'âœ— ' : order.status === 'in_progress' ? 'âŸ³ ' : '';
        statusBadge.textContent = statusIcon + statusText;
        statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ' + this.getStatusColor(order.status);
      }

      // Update order status section at bottom
      const orderStatusSection = clone.querySelector('.order-status-section');
      if (orderStatusSection) {
        const statusDot = orderStatusSection.querySelector('.w-3.h-3');
        const statusText = orderStatusSection.querySelector('span.text-green-700');
        if (statusDot && statusText) {
          // Update dot color
          const dotColors = {
            'pending': 'bg-yellow-500',
            'confirmed': 'bg-blue-500',
            'in_progress': 'bg-purple-500',
            'processing': 'bg-purple-500',
            'completed': 'bg-green-500',
            'cancelled': 'bg-red-500'
          };
          const statusLower = (order.status || 'pending').toLowerCase();
          statusDot.className = 'w-3 h-3 ' + (dotColors[statusLower] || 'bg-gray-500') + ' rounded-full';
          
          // Update text
          const textColors = {
            'pending': 'text-yellow-700',
            'confirmed': 'text-blue-700',
            'in_progress': 'text-purple-700',
            'processing': 'text-purple-700',
            'completed': 'text-green-700',
            'cancelled': 'text-red-700'
          };
          const statusDisplayText = (order.status || 'pending').charAt(0).toUpperCase() + (order.status || 'pending').slice(1).replace('_', ' ');
          statusText.textContent = 'Order ' + statusDisplayText;
          statusText.className = (textColors[statusLower] || 'text-gray-700') + ' font-medium';
        }
      }

      return clone;
    }

    formatDate(dateString) {
      if (!dateString) return 'N/A';
      const date = new Date(dateString);
      return date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      });
    }

    // Get status color classes
    getStatusColor(status) {
      const statusLower = (status || '').toLowerCase();
      const colors = {
        'pending': 'bg-yellow-100 text-yellow-800',
        'confirmed': 'bg-blue-100 text-blue-800',
        'in_progress': 'bg-purple-100 text-purple-800',
        'processing': 'bg-purple-100 text-purple-800',
        'completed': 'bg-green-100 text-green-800',
        'cancelled': 'bg-red-100 text-red-800'
      };
      return colors[statusLower] || 'bg-gray-100 text-gray-800';
    }

    // Render the Recent Order Summary based on the newest order (any status)
    renderRecentSummary() {
      const summary = document.getElementById('recent-order-summary');
      const titleEl = document.getElementById('recent-order-title');
      const amountEl = document.getElementById('recent-order-amount');
      const dateEl = document.getElementById('recent-order-date');
      const statusEl = document.getElementById('recent-order-status');
      const viewBtn = document.getElementById('recent-order-view-btn');
      if (!summary || !titleEl || !amountEl || !dateEl || !statusEl || !viewBtn) return;

      // Get the most recent order (any status)
      const sortedOrders = [...this.orders]
        .sort((a, b) => new Date(b.orderDate).getTime() - new Date(a.orderDate).getTime());

      if (sortedOrders.length === 0) {
        summary.classList.add('hidden');
        return;
      }

      const latest = sortedOrders[0];
      summary.classList.remove('hidden');
      titleEl.textContent = latest.projectName || 'Order';
      amountEl.textContent = `â‚¹${(latest.total || 0).toLocaleString('en-IN')}`;
      dateEl.textContent = this.formatDate(latest.orderDate);
      
      // Update status badge with correct text and colors
      const statusText = (latest.status || 'pending').charAt(0).toUpperCase() + (latest.status || 'pending').slice(1).replace('_', ' ');
      statusEl.textContent = statusText;
      // Remove all status color classes and add the correct one
      statusEl.className = 'inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium whitespace-nowrap ' + this.getStatusColor(latest.status);
      
      // Open modal with latest order details on click
      viewBtn.onclick = () => {
        this.showOrderDetails(latest);
      };
    }

    showOrderDetails(order) {
      const modal = document.getElementById('order-details-modal');
      if (!modal) return;
      const byId = (id) => document.getElementById(id);
      byId('order-modal-title').textContent = order.projectName || 'Order Details';
      byId('order-modal-amount').textContent = `â‚¹${(order.total || 0).toLocaleString('en-IN')}`;
      byId('order-modal-date').textContent = this.formatDate(order.orderDate);
      byId('order-modal-id').textContent = order.orderId || '-';
      byId('order-modal-desc').textContent = order.description || '-';
      const req = order.requirements || {};
      byId('order-modal-contact').textContent = req.contactPerson || '-';
      byId('order-modal-email').textContent = req.email || '-';
      byId('order-modal-phone').textContent = req.phone || '-';
      byId('order-modal-restaurant').textContent = req.restaurantName || '-';
      byId('order-modal-cuisine').textContent = req.cuisineType || '-';
      byId('order-modal-additional').textContent = req.additionalRequirements || 'â€”';

      // Lock body scroll
      document.body.style.overflow = 'hidden';
      modal.classList.remove('hidden');

      const closeFns = () => {
        modal.classList.add('hidden');
        // Unlock body scroll
        document.body.style.overflow = '';
      };
      const backdrop = document.getElementById('order-modal-backdrop');
      const closeTop = document.getElementById('order-modal-close');
      const closeBottom = document.getElementById('order-modal-close-bottom');
      backdrop.onclick = closeFns;
      closeTop.onclick = closeFns;
      closeBottom.onclick = closeFns;
    }
  }

  // Initialize orders when page loads
  document.addEventListener('DOMContentLoaded', () => {
    new Orders();
    
    // Show success message if redirected from payment
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('order') === 'success') {
      showSuccessMessage();
      // Clear the URL parameter
      window.history.replaceState({}, document.title, window.location.pathname);
    }
  });

  function showSuccessMessage() {
    // Create success message
    const successDiv = document.createElement('div');
    successDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transform transition-all duration-300';
    successDiv.innerHTML = `
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>Order placed successfully! ðŸŽ‰</span>
      </div>
    `;
    
    document.body.appendChild(successDiv);
    
    // Remove after 5 seconds
    setTimeout(() => {
      successDiv.remove();
    }, 5000);
  }
</script>