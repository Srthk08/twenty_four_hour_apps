                <!-- Order Details -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                  <div>
                    <h4 class="text-lg font-semibold text-gray-800 mb-3">Project Details</h4>
                    <div class="space-y-2">
                      <div class="flex justify-between">
                        <span class="text-gray-600">Project Name:</span>
