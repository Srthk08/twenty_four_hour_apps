<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');
  const errorText = document.getElementById('error-text');

  // Personal field helpers
  function getPersonalInputs() {
    const firstNameInput = document.getElementById('first_name') as HTMLInputElement;
    const lastNameInput = document.getElementById('last_name') as HTMLInputElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const phoneInput = document.getElementById('phone') as HTMLInputElement;
    const companyInput = document.getElementById('company') as HTMLInputElement;
    return { firstNameInput, lastNameInput, emailInput, phoneInput, companyInput };
  }

  function preventAutofill(el?: HTMLInputElement) {
    if (!el) return;
    el.setAttribute('autocomplete', 'off');
    // Change the name temporarily to defeat saved autofill
    el.setAttribute('data-orig-name', el.name || '');
    el.name = `${el.id}_noautofill`;
  }

  function restoreName(el?: HTMLInputElement) {
    if (!el) return;
    const orig = el.getAttribute('data-orig-name');
    if (orig) el.name = orig;
  }

  function clearAndDisablePersonalFields() {
    const { firstNameInput, lastNameInput, emailInput, phoneInput, companyInput } = getPersonalInputs();
    [firstNameInput, lastNameInput, emailInput, phoneInput, companyInput].forEach((el) => {
      if (!el) return;
      el.value = '';
      el.disabled = true;
      preventAutofill(el);
    });
    // Disable submit to prevent anonymous sends
    const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
    if (submitBtn) submitBtn.disabled = true;
  }

  function enablePersonalFields() {
    const { firstNameInput, lastNameInput, emailInput, phoneInput, companyInput } = getPersonalInputs();
    [firstNameInput, lastNameInput, emailInput, phoneInput, companyInput].forEach((el) => {
      if (!el) return;
      el.disabled = false;
      restoreName(el);
    });
    
    // Also enable project type and message fields
    const projectTypeSelect = document.getElementById('project_type') as HTMLSelectElement;
    const messageTextarea = document.getElementById('message') as HTMLTextAreaElement;
    
    if (projectTypeSelect) {
      projectTypeSelect.disabled = false;
    }
    if (messageTextarea) {
      messageTextarea.disabled = false;
      messageTextarea.placeholder = 'Tell us about your project requirements...';
    }
    
    const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
    if (submitBtn) submitBtn.disabled = false;
    
    // Hide auth message when user logs in
    const authMessage = document.getElementById('auth-message');
    if (authMessage) {
      authMessage.remove();
    }
  }

  // Immediately clear/disable until auth confirms login
  clearAndDisablePersonalFields();

  // Re-enable on login
  window.addEventListener('user-logged-in', () => {
    enablePersonalFields();
  });
  // Ensure cleared on logout
  window.addEventListener('user-logged-out', () => {
    clearAndDisablePersonalFields();
  });

  // Force clear form on page load for non-authenticated users
