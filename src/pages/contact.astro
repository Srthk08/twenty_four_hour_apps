  // Simple form management - NO pre-filling without login
  window.prefillForm = async function prefillForm() {
    console.log('üîÑ Checking authentication status...');
    
    // Check if user is logged in
    const authManager = window.globalAuthManager || window.simpleAuthManager;
    
    // CRITICAL: Also check sessionStorage to ensure no stale data
    const sessionData = sessionStorage.getItem('simple-auth-session');
    const hasValidSession = sessionData && sessionData !== 'null' && sessionData !== '{}';
    
    const isLoggedIn = authManager && authManager.isUserLoggedIn() && hasValidSession;

      if (isLoggedIn) {
      console.log('‚úÖ User is logged in - enabling form');
        enablePersonalFields();
      
      // Only pre-fill if user is logged in AND we have valid session data
        const currentUser = authManager.getCurrentUser();
        
        // Double-check: if currentUser is null or session is invalid, don't prefill
        if (!currentUser || !hasValidSession) {
          console.log('‚ö†Ô∏è User object is null or session invalid - clearing form');
          clearAndDisablePersonalFields();
          return;
        }
        
        if (currentUser && currentUser.email) {
        const firstNameInput = document.getElementById('first_name') as HTMLInputElement;
        const lastNameInput = document.getElementById('last_name') as HTMLInputElement;
        const emailInput = document.getElementById('email') as HTMLInputElement;
        const phoneInput = document.getElementById('phone') as HTMLInputElement;
        const companyInput = document.getElementById('company') as HTMLInputElement;
        
        // Pre-fill only if user data exists
        if (currentUser.full_name) {
          const names = currentUser.full_name.split(' ');
          if (firstNameInput) firstNameInput.value = names[0] || '';
          if (lastNameInput && names.length > 1) lastNameInput.value = names.slice(1).join(' ');
