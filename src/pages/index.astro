<style>

  /* How It Works button text visibility */
  .how-it-works-btn {
    color: white !important;
  }
  
  .how-it-works-btn:hover {
    color: #111827 !important; /* Black text on hover */
    background-color: white !important;
  }
  
  .how-it-works-btn:focus {
    color: #111827 !important; /* Black text on focus */
    background-color: white !important;
  }

  /* Contact Us button text visibility - More specific selectors */
  a.contact-us-btn {
    color: white !important;
  }
  
  a.contact-us-btn:hover {
    color: #000000 !important; /* Black text on white background */
    background-color: white !important;
  }
  
  a.contact-us-btn:focus {
    color: #000000 !important; /* Black text on focus */
    background-color: white !important;
  }
  
  /* Additional specificity for hover state */
  .contact-us-btn:hover span,
  .contact-us-btn:hover {
    color: #000000 !important;
  }
</style>

<script>
  // Ensure Contact Us button text visibility
  document.addEventListener('DOMContentLoaded', () => {
    const contactButtons = document.querySelectorAll('.contact-us-btn');
    contactButtons.forEach(button => {
      button.addEventListener('mouseenter', function() {
        this.style.color = '#000000';
        this.style.backgroundColor = 'white';
      });
      button.addEventListener('mouseleave', function() {
        this.style.color = 'white';
        this.style.backgroundColor = 'transparent';
      });
    });
  });

  // Ensure How It Works button text visibility
  document.addEventListener('DOMContentLoaded', () => {
    const howItWorksBtn = document.querySelector('.how-it-works-btn');
    if (howItWorksBtn) {
      // Add hover event listeners to ensure text color changes
      howItWorksBtn.addEventListener('mouseenter', () => {
        howItWorksBtn.style.color = '#111827';
        howItWorksBtn.style.backgroundColor = 'white';
      });
      
      howItWorksBtn.addEventListener('mouseleave', () => {
        howItWorksBtn.style.color = 'white';
        howItWorksBtn.style.backgroundColor = 'transparent';
      });
    }
  });
  
  // Check for password reset tokens and redirect immediately
  (function() {
    // Check URL hash for password reset tokens
    const hash = window.location.hash || '';
    if (hash.includes('access_token')) {
      const hashParams = new URLSearchParams(hash.substring(1));
      const type = hashParams.get('type');
      const accessToken = hashParams.get('access_token');
      const refreshToken = hashParams.get('refresh_token');
      
      // If this is a password reset (recovery) flow, redirect to reset-password page
      if (type === 'recovery' && accessToken && refreshToken) {
        console.log('Password reset tokens detected on home page, redirecting to reset-password');
        window.location.href = `/reset-password${hash}`;
        return;
      }
    }
    
    // Also check URL search params
    const urlParams = new URLSearchParams(window.location.search);
    const searchType = urlParams.get('type');
    const searchAccessToken = urlParams.get('access_token');
    const searchRefreshToken = urlParams.get('refresh_token');
    
    if (searchType === 'recovery' && searchAccessToken && searchRefreshToken) {
      console.log('Password reset tokens detected in search params, redirecting to reset-password');
      window.location.href = `/reset-password?${window.location.search.substring(1)}`;
      return;
    }
  })();

  // Ultra-fast loading - minimal JavaScript
  document.addEventListener('DOMContentLoaded', function() {
    // Only handle anchor links - everything else loads immediately
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const targetId = this.getAttribute('href').substring(1);
        const target = document.getElementById(targetId);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
    
    // Handle image loading errors
    document.querySelectorAll('.product-card img').forEach(img => {
      img.addEventListener('error', function() {
        this.style.backgroundColor = '#f3f4f6';
        this.style.display = 'flex';
        this.style.alignItems = 'center';
        this.style.justifyContent = 'center';
        this.innerHTML = '<div style="text-align: center; color: #6b7280; font-size: 12px;">Image Unavailable</div>';
      });
    });
  });
</script>