---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Profile Test - DevExpress">
  <section class="py-6 sm:py-8 lg:py-12 bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto px-3 sm:px-4 lg:px-8">
      <!-- Page Header -->
      <div class="mb-6 sm:mb-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center sm:text-left">Profile Test Page</h1>
        <p class="text-sm sm:text-base text-gray-600 mt-2 text-center sm:text-left">This is a test profile page.</p>
      </div>

      <!-- Test Content -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Test Content</h2>
        <p class="text-gray-600">If you can see this, the profile page is working!</p>
      </div>
    </div>
  </section>
</Layout>
