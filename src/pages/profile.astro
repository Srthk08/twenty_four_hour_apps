  // Phone number validation based on country code
  function setupPhoneValidation() {
    const countryCodeSelect = document.getElementById('country_code') as HTMLSelectElement;
    const phoneInput = document.getElementById('phone') as HTMLInputElement;
    const phoneError = document.getElementById('phone-error') as HTMLElement;

    if (!countryCodeSelect || !phoneInput) return;

    // Function to get the country code from select
    function getCountryCode(): string {
      return countryCodeSelect.value;
    }

    // Country code to max digits mapping
    const countryCodeLimits: { [key: string]: number } = {
      '+91': 10, // India
      '+1': 10,  // USA/Canada
      '+44': 10, // UK
      '+61': 9,  // Australia
      '+86': 11, // China
      '+81': 10, // Japan
      '+49': 11, // Germany
      '+33': 9,  // France
      '+971': 9, // UAE
      '+966': 9  // Saudi Arabia
    };

    function validatePhone() {
      const countryCode = getCountryCode();
      const phone = phoneInput.value.replace(/\D/g, ''); // Remove non-digits
      const maxDigits = countryCodeLimits[countryCode] || 10;

      // Update maxlength based on country code
      phoneInput.maxLength = maxDigits;
      phoneInput.pattern = `[0-9]{1,${maxDigits}}`;

      // For India (+91), validate 10 digits
      if (countryCode === '+91') {
        if (phone.length > 0 && phone.length !== 10) {
          phoneError?.classList.remove('hidden');
          phoneError.textContent = 'Please enter a valid 10-digit phone number';
          phoneInput.classList.add('border-red-500');
          return false;
        } else {
          phoneError?.classList.add('hidden');
          phoneInput.classList.remove('border-red-500');
          return true;
        }
      } else {
        // For other countries, validate exact digit count
        if (phone.length > 0 && phone.length !== maxDigits) {
          phoneError?.classList.remove('hidden');
          phoneError.textContent = `Please enter a valid ${maxDigits}-digit phone number`;
          phoneInput.classList.add('border-red-500');
          return false;
        } else {
          phoneError?.classList.add('hidden');
          phoneInput.classList.remove('border-red-500');
          return true;
        }
      }
    }

    // Restrict input to numbers only - but don't change existing values automatically
    let isUserTyping = false;
    phoneInput.addEventListener('focus', function() {
      isUserTyping = true;
    });
    phoneInput.addEventListener('blur', function() {
      isUserTyping = false;
    });
    
    phoneInput.addEventListener('input', function(e) {
      // Only restrict/format if user is actively typing, not when form is being populated
      if (isUserTyping) {
        // Strip all non-digits to ensure only numbers are entered
        const value = (e.target as HTMLInputElement).value.replace(/\D/g, '');
        const countryCode = getCountryCode();
        const maxDigits = countryCodeLimits[countryCode] || 10;
        
        (e.target as HTMLInputElement).value = value.slice(0, maxDigits);
        validatePhone();
      }
    });

    // Validate on country code change
    countryCodeSelect.addEventListener('change', function() {
      // Clear phone input when country code changes
      if (isUserTyping || phoneInput === document.activeElement) {
        phoneInput.value = '';
      }
      const countryCode = getCountryCode();
      phoneInput.placeholder = countryCode === '+91' ? '9876543210' : 'Enter phone number';
      validatePhone();
    });

    // Validate on blur
    phoneInput.addEventListener('blur', validatePhone);
  }

  // Handle form submission - PERMANENT UPDATE TO SUPABASE
  const profileForm = document.getElementById('profile-form') as HTMLFormElement;
  profileForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(profileForm);
    const fullName = formData.get('full_name') as string;
    const countryCode = formData.get('country_code') as string || '+91';
    const phone = formData.get('phone') as string;
    const companyName = formData.get('company_name') as string;

    // Basic validation
    if (!fullName.trim()) {
      showError('Full name is required');
      return;
    }

    // Phone validation
    const phoneInput = document.getElementById('phone') as HTMLInputElement;
    const countryCodeSelect = document.getElementById('country_code') as HTMLSelectElement;
    if (phone && phone.trim()) {
      const phoneDigits = phone.replace(/\D/g, '');
      const countryCode = countryCodeSelect?.value || '+91';
      
      if (countryCode === '+91' && phoneDigits.length !== 10) {
        showError('Please enter a valid 10-digit phone number for India');
        phoneInput?.focus();
        return;
      }
    }

    // Show loading state immediately
    const updateBtn = document.getElementById('update-btn') as HTMLButtonElement;
    const originalButtonText = updateBtn.innerHTML;
    updateBtn.disabled = true;
    updateBtn.innerHTML = `
      <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 12a8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span>Updating...</span>
    `;

    try {
      // Get current user
      const authManager = window.globalAuthManager || window.simpleAuthManager;
      const currentUser = authManager?.getCurrentUser();
      if (!currentUser) {
        showError('User not authenticated');
        updateBtn.disabled = false;
        updateBtn.innerHTML = originalButtonText;
        return;
      }

      // Format phone number with country code
      const formattedPhone = phone && phone.trim() ? `${countryCode}${phone.replace(/\D/g, '')}` : null;

      // Prepare update data
      const updateData = {
        full_name: fullName.trim(),
        phone: formattedPhone,
        company_name: companyName.trim() || null,
        updated_at: new Date().toISOString()
      };

      // Update sessionStorage immediately for instant feedback (no database call)
      try {
        const sessionData = sessionStorage.getItem('simple-auth-session');
        if (sessionData) {
          const session = JSON.parse(sessionData);
          if (session.user) {
            session.user.full_name = fullName.trim();
            session.user.phone = formattedPhone || undefined;
            session.user.company_name = companyName.trim() || undefined;
            sessionStorage.setItem('simple-auth-session', JSON.stringify(session));
            console.log('âœ… Profile updated in sessionStorage (instant)');
          }
        }
        
        // Also update localStorage for persistence
        const userData = {
          ...currentUser,
          full_name: fullName.trim(),
          phone: formattedPhone || undefined,
          company_name: companyName.trim() || undefined
        };
        localStorage.setItem('simple-auth-user', JSON.stringify(userData));
        console.log('âœ… Profile updated in localStorage (instant)');
      } catch (localError) {
        console.warn('âš ï¸ SessionStorage update warning (non-critical):', localError);
      }

      // Update auth manager local state (synchronous, no database call)
      if (authManager) {
        // Update the auth manager's current user data directly
        if (authManager.currentUser) {
          authManager.currentUser.full_name = fullName.trim();
          authManager.currentUser.phone = formattedPhone || undefined;
          authManager.currentUser.company_name = companyName.trim() || undefined;
          console.log('âœ… Auth manager currentUser updated');
        }
        
        // Also trigger handleLogin to refresh the auth manager state
        if (typeof authManager.handleLogin === 'function') {
          const updatedUser = {
            ...currentUser,
            full_name: fullName.trim(),
            phone: formattedPhone || undefined,
            company_name: companyName.trim() || undefined
          };
          authManager.handleLogin(updatedUser);
          console.log('âœ… Auth manager state refreshed via handleLogin');
        } else if (typeof authManager.updateProfile === 'function') {
          try {
            // Check if updateProfile is async - if so, don't await it
            const profileUpdate = authManager.updateProfile({
              full_name: fullName.trim(),
              phone: formattedPhone || undefined,
              company_name: companyName.trim() || undefined
            });
            // If it returns a promise, handle it in background
            if (profileUpdate && typeof profileUpdate.then === 'function') {
              profileUpdate.catch(err => console.warn('Background profile update warning:', err));
            }
            console.log('âœ… Profile updated in auth manager (instant)');
          } catch (localError) {
            console.warn('âš ï¸ Auth manager update warning (non-critical):', localError);
          }
        }
      }

      // Update profile in Supabase (optimized - no select, just update)
      // Run in background after showing success
      const supabaseUpdate = supabase
        .from('profiles')
        .update(updateData)
        .eq('id', currentUser.id);

      // Show success immediately (optimistic update)
      showSuccess('Profile updated successfully!');
      
      // Hide any previous error messages
      const errorMessage = document.getElementById('error-message');
      if (errorMessage) {
        errorMessage.classList.add('hidden');
      }

      // Reset button state immediately
      updateBtn.disabled = false;
      updateBtn.innerHTML = originalButtonText;

      // Dispatch auth state change event
      window.dispatchEvent(new CustomEvent('auth-state-changed'));

      // Complete database update in background (non-blocking)
      supabaseUpdate.then(({ error }) => {
        if (error) {
          console.error('Supabase update error (background):', error);
          // Show a subtle error notification without disrupting user
          const errorMsg = document.getElementById('error-message');
          const errorText = document.getElementById('error-text');
          if (errorMsg && errorText) {
            errorText.textContent = 'Profile saved locally. Database sync failed - changes will sync on next login.';
            errorMsg.classList.remove('hidden');
            setTimeout(() => errorMsg.classList.add('hidden'), 5000);
          }
        } else {
          console.log('âœ… Profile synced to database successfully');
        }
      }).catch(err => {
        console.error('Background sync error:', err);
      });
      
    } catch (error: any) {
      console.error('Profile update error:', error);
      showError(error.message || 'Failed to update profile. Please try again.');
      updateBtn.disabled = false;
      updateBtn.innerHTML = originalButtonText;
    }
  });

  // Handle password change form submission - PERMANENT PASSWORD UPDATE
  const passwordForm = document.getElementById('password-form') as HTMLFormElement;
  passwordForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(passwordForm);
    const currentPassword = formData.get('current_password') as string;
    const newPassword = formData.get('new_password') as string;
    const confirmPassword = formData.get('confirm_password') as string;

    // Validation
    if (!currentPassword || !newPassword || !confirmPassword) {
      showPasswordError('All password fields are required');
      return;
    }

    if (newPassword !== confirmPassword) {
      showPasswordError('New password and confirm password do not match');
      return;
    }

    if (newPassword.length < 6) {
      showPasswordError('New password must be at least 6 characters long');
      return;
    }

    // Show loading state
    const changePasswordBtn = document.getElementById('change-password-btn') as HTMLButtonElement;
    if (!changePasswordBtn) {
      console.error('Change password button not found');
      return;
    }
    
    changePasswordBtn.disabled = true;
    changePasswordBtn.innerHTML = `
      <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 12a8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Changing Password...
    `;

    try {
      // Get current user
      const authManager = window.globalAuthManager || window.simpleAuthManager;
      const currentUser = authManager?.getCurrentUser();
      
      if (!currentUser || !currentUser.id) {
        showPasswordError('User not authenticated. Please login again.');
        // Reset button state
        changePasswordBtn.disabled = false;
        changePasswordBtn.innerHTML = 'Change Password';
        return;
      }

      console.log('Changing password for user:', currentUser.id);

      // Update password in Supabase for permanent change
      const { data, error } = await supabase.auth.updateUser({
        password: newPassword
      });

      if (error) {
        console.error('Password update error:', error);
        showPasswordError('Failed to update password: ' + error.message);
        return;
      }

      console.log('âœ… Password updated in Supabase:', data);

      // Show success message
      showPasswordSuccess('Password changed successfully and permanently!');
      
      // Clear password form
      passwordForm.reset();
      
      // Hide any previous error messages
      const passwordErrorMessage = document.getElementById('password-error-message');
      if (passwordErrorMessage) {
        passwordErrorMessage.classList.add('hidden');
      }

      // Dispatch auth state change event
      window.dispatchEvent(new CustomEvent('auth-state-changed'));
      
    } catch (error: any) {
      console.error('Password change error:', error);
      showPasswordError(error.message || 'Failed to change password');
    } finally {
      // Always reset button state
      if (changePasswordBtn) {
        changePasswordBtn.disabled = false;
        changePasswordBtn.innerHTML = 'Change Password';
      }
    }
  });

  // CRITICAL: Populate user data immediately when script loads
  console.log('Script loaded, populating user data immediately');
  populateUserData();

  // Populate user data when page loads
  document.addEventListener('DOMContentLoaded', () => {
    console.log('DOMContentLoaded event fired');
    populateUserData();
    setupPhoneValidation();
  });

  // Also populate when the script loads (in case DOMContentLoaded already fired)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      console.log('DOMContentLoaded event listener added');
      populateUserData();
    });
  } else {
    console.log('Document already loaded, populating immediately');
    populateUserData();
  }
</script>