  // Initialize cart autocomplete functionality
  function initializeCartPincodeAutocomplete() {
    const pincodeInput = document.getElementById('cart-pincode-input');
    const cityInput = document.getElementById('cart-city-input');
    const stateInput = document.getElementById('cart-state-input');
    const citySuggestions = document.getElementById('cart-city-suggestions');
    const stateSuggestions = document.getElementById('cart-state-suggestions');

    if (pincodeInput && cityInput && stateInput) {
      console.log('Initializing cart pincode autocomplete...');
      
      // Pincode-based autofill
      pincodeInput.addEventListener('input', function() {
        const pincode = this.value.trim();
        console.log('Cart pincode entered:', pincode);
        if (pincode.length === 6 && cartPincodeData[pincode]) {
          console.log('Found cart pincode data:', cartPincodeData[pincode]);
          cityInput.value = cartPincodeData[pincode].city;
          stateInput.value = cartPincodeData[pincode].state;
          // Set country to India when pincode is found
          const countrySelect = document.getElementById('cart-country-select');
          if (countrySelect) {
            countrySelect.value = 'India';
          }
        }
      });

      // City autocomplete
      cityInput.addEventListener('input', function() {
        const query = this.value.toLowerCase();
        if (query.length > 0) {
          const filtered = cartIndianCities.filter(city => 
            city.toLowerCase().includes(query)
          );
          showCartSuggestions(citySuggestions, filtered, cityInput);
        } else {
          hideCartSuggestions(citySuggestions);
        }
      });

      // State autocomplete
      stateInput.addEventListener('input', function() {
        const query = this.value.toLowerCase();
        if (query.length > 0) {
          const filtered = cartIndianStates.filter(state => 
            state.toLowerCase().includes(query)
          );
          showCartSuggestions(stateSuggestions, filtered, stateInput);
        } else {
          hideCartSuggestions(stateSuggestions);
        }
      });

      // Hide suggestions when clicking outside
      document.addEventListener('click', function(e) {
        if (!cityInput.contains(e.target) && !citySuggestions.contains(e.target)) {
          hideCartSuggestions(citySuggestions);
        }
        if (!stateInput.contains(e.target) && !stateSuggestions.contains(e.target)) {
          hideCartSuggestions(stateSuggestions);
        }
      });
    }
  }

