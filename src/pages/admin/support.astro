       `;
    }
  }
  
  function closeTicketModal() {
    document.getElementById('ticket-modal').classList.add('hidden');
    // Unlock body scroll
    document.body.style.overflow = '';
  }
  
  
  async function reopenTicket(ticketId) {
    if (confirm('Reopen this ticket?')) {
      try {
        // Wait for Supabase to be available
        if (!supabase) {
          await waitForSupabase();
        }
        
        // Update ticket status in Supabase
        const { error } = await supabase
          .from('support_tickets')
          .update({ 
            status: 'open',
            updated_at: new Date().toISOString()
          })
          .eq('id', ticketId);
        
        if (error) {
          console.error('Error reopening ticket:', error);
          alert('Failed to reopen ticket: ' + error.message);
          return;
        }
        
        // Update local array
        const ticketIndex = currentTickets.findIndex(t => t.id === ticketId);
        if (ticketIndex > -1) {
          currentTickets[ticketIndex].status = 'open';
          currentTickets[ticketIndex].updatedAt = new Date().toISOString();
          filteredTickets = [...currentTickets];
          renderTickets();
          updateTicketsCount();
        }
        
        alert('Ticket reopened successfully!');
      } catch (error) {
        console.error('Error reopening ticket:', error);
        alert('Failed to reopen ticket');
      }
    }
  }
  
  // Send email notification to user when admin replies
  async function sendTicketReplyEmail(ticket, adminReply, status) {
    try {
      const emailSubject = `Your Problem is Resolved - ${APP_NAME} Support Ticket #${ticket.ticketNumber}`;
      
      const emailBody = `
Hello ${ticket.customerName || 'Valued Customer'},

Your problem has been resolved! Please check on the ${APP_NAME} app.

Your complaint has been completed and our support team has responded to your ticket.

Ticket Details:
- Ticket Number: ${ticket.ticketNumber}
- Subject: ${ticket.subject}
- Status: ${status.charAt(0).toUpperCase() + status.slice(1).replace('_', ' ')}

Admin Reply:
${adminReply}

Please check the ${APP_NAME} app for more details.

Thank you for your patience.

Best regards,
${APP_NAME} Support Team

---
This is an automated notification. Please do not reply to this email.
      `.trim();

      // Try Supabase Edge Function first (if configured)
      try {
        const { data, error } = await supabase.functions.invoke('send-email', {
          body: {
            to: ticket.customerEmail,
            subject: emailSubject,
            body: emailBody,
            ticketNumber: ticket.ticketNumber,
            customerName: ticket.customerName
          }
        });

        if (!error && data) {
          console.log('‚úÖ Email sent successfully via Edge Function');
          return;
        }
      } catch (edgeError) {
        console.log('üìß Edge Function not available, trying database function...');
      }

      // Fallback: Try using Supabase database function
      try {
        const { error: dbError } = await supabase.rpc('send_ticket_reply_email', {
          p_to_email: ticket.customerEmail,
          p_subject: emailSubject,
          p_body: emailBody,
          p_ticket_number: ticket.ticketNumber,
          p_customer_name: ticket.customerName
        });

        if (!dbError) {
          console.log('‚úÖ Email sent successfully via database function');
          return;
        }
      } catch (dbError) {
        console.log('üìß Database function not available, using email service...');
      }

      // Final fallback: Store email data in a table for processing by a background job
      // Or use a webhook/email service API
      try {
        // Store email notification in a table for later processing
        const { error: insertError } = await supabase
          .from('email_notifications')
          .insert({
            to_email: ticket.customerEmail,
            subject: emailSubject,
            body: emailBody,
            ticket_id: ticket.id,
            ticket_number: ticket.ticketNumber,
            customer_name: ticket.customerName,
            status: 'pending',
            created_at: new Date().toISOString()
          });

        if (!insertError) {
          console.log('‚úÖ Email notification queued for sending');
        } else {
          console.log('üìß Email notification logged (table may not exist yet)');
          // Log email details for manual sending or external service
          console.log('Email Details:', {
            to: ticket.customerEmail,
            subject: emailSubject,
            body: emailBody
          });
        }
      } catch (error) {
        // If all methods fail, just log it - don't block the ticket update
        console.log('üìß Email notification prepared (configure email service to send):', {
          to: ticket.customerEmail,
          subject: emailSubject,
          body: emailBody
        });
      }
    } catch (error) {
      console.warn('‚ö†Ô∏è Error sending email notification (non-blocking):', error);
      // Don't throw error - email sending failure shouldn't block ticket update
    }
  }

  async function updateTicket(ticketId) {
    const status = document.getElementById('ticket-status').value;
    const response = document.getElementById('ticket-response').value;
    
    if (!response.trim()) {
      alert('Please add a reply before updating the ticket');
      return;
    }
    
    try {
      // Wait for Supabase to be available
      if (!supabase) {
        await waitForSupabase();
      }
      
      // Find the ticket to get its details
      const ticket = currentTickets.find(t => t.id === ticketId);
      if (!ticket) {
        alert('Ticket not found');
        return;
      }
      
      // Create admin reply object
      const adminReply = {
        message: response,
        timestamp: new Date().toISOString(),
        adminName: 'Admin' // You can get this from the current admin user
      };
      
      // Get existing admin replies and add new one
      const existingReplies = ticket.adminReplies || [];
      const updatedReplies = [...existingReplies, adminReply];
      
      // Update ticket in Supabase
      const { error } = await supabase
        .from('support_tickets')
        .update({ 
          status: status,
          admin_replies: updatedReplies,
          updated_at: new Date().toISOString()
        })
        .eq('id', ticketId);
      
      if (error) {
        console.error('Error updating ticket:', error);
        alert('Failed to update ticket: ' + error.message);
        return;
      }
      
      // Send email notification to user
      await sendTicketReplyEmail(ticket, response, status);
      
      // Update local array
      const ticketIndex = currentTickets.findIndex(t => t.id === ticketId);
      if (ticketIndex > -1) {
        currentTickets[ticketIndex].status = status;
        currentTickets[ticketIndex].adminReplies = updatedReplies;
        currentTickets[ticketIndex].updatedAt = new Date().toISOString();
        filteredTickets = [...currentTickets];
        renderTickets();
        updateTicketsCount();
      }
      
      closeTicketModal();
      
      // Show success toast
      showSuccessToast(`Reply sent to ${ticket.customerName} for ticket #${ticket.ticketNumber}`);
      
    } catch (error) {
      console.error('Error updating ticket:', error);
      alert('Failed to update ticket');
    }
  }



