  // Sync dropdown values between mobile and desktop
  function syncDropdowns() {
    const select = document.getElementById('items-per-page');
    const selectMobile = document.getElementById('items-per-page-mobile');
    
    if (select && selectMobile) {
      // Sync mobile to desktop
      selectMobile.addEventListener('change', (e) => {
        e.preventDefault();
        select.value = selectMobile.value;
        itemsPerPage = parseInt(selectMobile.value);
        currentPage = 1;
        renderUsers();
      });
      
      // Sync desktop to mobile
      select.addEventListener('change', (e) => {
        e.preventDefault();
        selectMobile.value = select.value;
        itemsPerPage = parseInt(select.value);
        currentPage = 1;
        renderUsers();
      });
    }
  }

