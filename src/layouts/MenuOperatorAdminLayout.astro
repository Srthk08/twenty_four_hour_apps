    function showMenuOperatorAdminContent() {
      const guardElement = document.getElementById('menu-operator-guard');
      if (guardElement) {
        // Hide the guard completely
        guardElement.style.display = 'none';
        guardElement.style.visibility = 'hidden';
        guardElement.style.opacity = '0';
        guardElement.style.height = '0';
        guardElement.style.overflow = 'hidden';
        
        // Show menu operator admin layout
        const menuOperatorAdminLayout = document.getElementById('menu-operator-admin-layout');
        if (menuOperatorAdminLayout) {
          menuOperatorAdminLayout.classList.remove('hidden');
          menuOperatorAdminLayout.style.display = 'block';
          menuOperatorAdminLayout.style.visibility = 'visible';
          menuOperatorAdminLayout.style.opacity = '1';
          
          // Update menu operator info in header
          updateMenuOperatorInfo();
        }
        
        // Dispatch event that menu operator admin content is ready
        window.dispatchEvent(new CustomEvent('menu-operator-access-granted'));
      }
    }
    
    // Update menu operator info in header
    async function updateMenuOperatorInfo() {
      try {
        // Ensure Supabase is available
        if (!supabase) {
          await waitForSupabase();
        }
        
        const { data: { user } } = await supabase.auth.getUser();
        if (user) {
          // Get user profile
          const { data: profile } = await supabase
            .from('profiles')
            .select('full_name')
            .eq('id', user.id)
            .single();
          
          // Update menu operator name
          const menuOperatorName = document.getElementById('menu-operator-name');
          if (menuOperatorName) {
            menuOperatorName.textContent = profile?.full_name || user.user_metadata?.full_name || user.email || 'Menu Operator';
          }
          
          // Update menu operator avatar
          const menuOperatorAvatar = document.getElementById('menu-operator-avatar');
          if (menuOperatorAvatar) {
            const name = profile?.full_name || user.user_metadata?.full_name || user.email || 'M';
            menuOperatorAvatar.textContent = name.charAt(0).toUpperCase();
          }
        }
      } catch (error) {
        console.warn('Could not update menu operator info:', error);
      }
    }
    
    // Show custom logout confirmation modal
    function showLogoutConfirmation() {
      return new Promise((resolve) => {
        const modal = document.getElementById('logout-confirmation-modal');
        const confirmBtn = document.getElementById('logout-confirm-btn');
        const cancelBtn = document.getElementById('logout-cancel-btn');
        
        if (!modal || !confirmBtn || !cancelBtn) {
          console.error('Logout modal elements not found');
          resolve(false);
          return;
        }
        
        // Show modal
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        
        // Handle confirm
        const handleConfirm = () => {
          modal.classList.add('hidden');
          document.body.style.overflow = '';
          confirmBtn.removeEventListener('click', handleConfirm);
          cancelBtn.removeEventListener('click', handleCancel);
          resolve(true);
        };
        
        // Handle cancel
        const handleCancel = () => {
          modal.classList.add('hidden');
          document.body.style.overflow = '';
          confirmBtn.removeEventListener('click', handleConfirm);
          cancelBtn.removeEventListener('click', handleCancel);
          resolve(false);
        };
        
        // Attach event listeners
        confirmBtn.addEventListener('click', handleConfirm);
        cancelBtn.addEventListener('click', handleCancel);
        
        // Close on backdrop click
        const handleBackdropClick = (e) => {
          if (e.target === modal) {
            modal.classList.add('hidden');
            document.body.style.overflow = '';
            modal.removeEventListener('click', handleBackdropClick);
            confirmBtn.removeEventListener('click', handleConfirm);
            cancelBtn.removeEventListener('click', handleCancel);
            resolve(false);
          }
        };
        modal.addEventListener('click', handleBackdropClick);
      });
    }

    // Simple menu operator sign out function
    async function handleMenuOperatorSignOut(event) {
      // Prevent default behavior and stop propagation
      if (event) {
        event.preventDefault();
        event.stopPropagation();
      }
      
      // Close the dropdown immediately - find the Alpine.js instance
      try {
        const profileButton = document.querySelector('[x-data*="open"]');
        if (profileButton && profileButton.__x) {
          profileButton.__x.$data.open = false;
        }
        // Also try to find by Alpine.js data attribute
        const dropdownContainer = document.querySelector('[x-data]');
        if (dropdownContainer && dropdownContainer.__x && dropdownContainer.__x.$data && typeof dropdownContainer.__x.$data.open !== 'undefined') {
          dropdownContainer.__x.$data.open = false;
        }
      } catch (e) {
        console.log('Could not close dropdown programmatically:', e);
      }
      
      // Show custom confirmation modal
      const confirmed = await showLogoutConfirmation();
      if (!confirmed) {
        return;
      }
      
      try {
        console.log('üö™ Menu operator signing out...');
        
        // Update UI to show signing out state
        const nameElement = document.getElementById('menu-operator-name');
        const avatarElement = document.getElementById('menu-operator-avatar');
        if (nameElement) nameElement.textContent = 'Signing out...';
        if (avatarElement) avatarElement.textContent = '...';
        
        // Get Supabase client - try multiple sources
        let supabaseClient = supabase;
        
        if (!supabaseClient) {
          // Try to get from waitForSupabase
          supabaseClient = await waitForSupabase();
        }
        
        if (!supabaseClient && window.supabase) {
          // Use window.supabase directly if it's a client instance
          if (window.supabase.auth && typeof window.supabase.auth.signOut === 'function') {
            supabaseClient = window.supabase;
          } else if (typeof window.supabase.createClient === 'function') {
            // Create client if it's the library
            supabaseClient = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
          }
        }
        
        // Sign out from Supabase if available
        if (supabaseClient && supabaseClient.auth && typeof supabaseClient.auth.signOut === 'function') {
          try {
            await supabaseClient.auth.signOut();
            console.log('‚úÖ Supabase sign out successful');
          } catch (supabaseError) {
            console.warn('‚ö†Ô∏è Supabase sign out error (continuing anyway):', supabaseError);
          }
        } else {
          console.warn('‚ö†Ô∏è Supabase client not available for sign out');
        }
        
        // Clear all cached data
        sessionStorage.clear();
        localStorage.clear();
        
        // Remove specific auth-related items
        localStorage.removeItem('supabase-auth-session');
        localStorage.removeItem('simple-auth-user');
        localStorage.removeItem('simple-auth-session');
        sessionStorage.removeItem('simple-auth-session');
        sessionStorage.removeItem('simple-auth-user');
        
        // Clear any auth manager state
        if (window.globalAuthManager) {
          window.globalAuthManager.isAuthenticated = false;
          window.globalAuthManager.currentUser = null;
        }
        if (window.simpleAuthManager) {
          window.simpleAuthManager.isAuthenticated = false;
          window.simpleAuthManager.currentUser = null;
        }
        
        console.log('‚úÖ All storage cleared');
        
        // Dispatch logout event
        window.dispatchEvent(new CustomEvent('user-logged-out'));
        
        // Small delay to ensure cleanup completes
        await new Promise(resolve => setTimeout(resolve, 200));
        
        // Redirect to login page
        window.location.href = '/login';
        console.log('‚úÖ Redirecting to login page');
        
      } catch (error) {
        console.error('‚ùå Error during menu operator sign out:', error);
        // Clear storage anyway
        try {
          sessionStorage.clear();
          localStorage.clear();
        } catch (e) {
          console.warn('Error clearing storage:', e);
        }
        // Force redirect even if logout fails
        window.location.href = '/login';
      }
    }

    // Make function globally available immediately
    window.handleMenuOperatorSignOut = handleMenuOperatorSignOut;
    
    // Attach backup event listener when DOM is ready
    document.addEventListener('DOMContentLoaded', () => {
      // Start checking menu operator access
      checkMenuOperatorAccess();
    });
    
    // Also check when auth state changes
    window.addEventListener('auth-state-changed', checkMenuOperatorAccess);
    
    // Check immediately if already loaded
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', checkMenuOperatorAccess);
    } else {
      checkMenuOperatorAccess();
    }
    
    // Fallback: Hide loading screen after 10 seconds if still showing
    setTimeout(() => {
      const guardElement = document.getElementById('menu-operator-guard');
      if (guardElement && guardElement.style.display !== 'none') {
        console.warn('‚ö†Ô∏è Menu operator access check timed out, showing content anyway');
        showMenuOperatorAdminContent();
      }
    }, 10000);
    
    console.log('MenuOperatorAdminLayout loaded successfully');
    </script>
