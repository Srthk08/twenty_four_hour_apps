              tempFavicon.type = 'image/svg+xml';
              tempFavicon.href = faviconDataUri;
              document.head.appendChild(tempFavicon);
            }, 10);
          }
        });
        
        // Override browser's default favicon behavior during navigation
        const originalPushState = history.pushState;
        const originalReplaceState = history.replaceState;
        
        history.pushState = function() {
          forceFavicon();
          return originalPushState.apply(history, arguments);
        };
        
        history.replaceState = function() {
          forceFavicon();
          return originalReplaceState.apply(history, arguments);
        };
        
        console.log('‚úÖ Favicon management system active - hand icon prevented during navigation');
      })();
      
      // Register service worker for favicon persistence
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/favicon-sw.js')
          .then(function(registration) {
            console.log('‚úÖ Favicon Service Worker registered:', registration.scope);
          })
          .catch(function(error) {
            console.log('‚ùå Favicon Service Worker registration failed:', error);
          });
      }
    </script>
    
