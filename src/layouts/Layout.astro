            console.log('üîÑ Favicon lost, forcing reload...');
            forceFavicon();
          }
        }, 100);
        
        // Intercept all link clicks to maintain favicon during navigation
        document.addEventListener('click', function(e) {
          const link = e.target.closest('a[href]');
          if (link && !link.href.includes('#')) {
            // Force favicon before navigation
            forceFavicon();
            
            // Also set a temporary favicon during navigation
            setTimeout(function() {
              const faviconDataUri = "data:image/svg+xml,%3Csvg width='32' height='32' viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='16' cy='16' r='15' fill='%2314b8a6'/%3E%3Crect x='8' y='8' width='16' height='16' rx='2' ry='2' fill='white' stroke='none'/%3E%3Ctext x='16' y='20' font-family='Arial, sans-serif' font-size='12' font-weight='bold' text-anchor='middle' fill='%2314b8a6'%3E24%3C/text%3E%3C/svg%3E";
              const tempFavicon = document.createElement('link');
