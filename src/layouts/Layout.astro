    <!-- Force favicon to load immediately to prevent flickering -->
    <script>
      // Global favicon management to prevent hand icon during navigation
      (function() {
        let faviconLocked = false;
        
        function forceFavicon() {
          if (faviconLocked) return;
          faviconLocked = true;
          
          // Inline SVG data URI for "24" favicon - loads immediately
          const faviconDataUri = "data:image/svg+xml,%3Csvg width='32' height='32' viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='16' cy='16' r='15' fill='%2314b8a6'/%3E%3Crect x='8' y='8' width='16' height='16' rx='2' ry='2' fill='white' stroke='none'/%3E%3Ctext x='16' y='20' font-family='Arial, sans-serif' font-size='12' font-weight='bold' text-anchor='middle' fill='%2314b8a6'%3E24%3C/text%3E%3C/svg%3E";
          
          // Remove ALL existing favicon links
          const existingFavicons = document.querySelectorAll('link[rel*="icon"], link[rel*="shortcut"], link[rel*="apple-touch"]');
          existingFavicons.forEach(link => link.remove());
          
          // Create the correct favicon with inline data URI
          const favicon = document.createElement('link');
          favicon.rel = 'icon';
          favicon.type = 'image/svg+xml';
          favicon.href = faviconDataUri;
          document.head.appendChild(favicon);
          
          // Also set it as shortcut icon
          const shortcutIcon = document.createElement('link');
          shortcutIcon.rel = 'shortcut icon';
          shortcutIcon.type = 'image/svg+xml';
          shortcutIcon.href = faviconDataUri;
          document.head.appendChild(shortcutIcon);
          
          // Apple touch icon
          const appleIcon = document.createElement('link');
          appleIcon.rel = 'apple-touch-icon';
          appleIcon.href = faviconDataUri;
          document.head.appendChild(appleIcon);
          
          // Force the favicon to load by creating an image element
          const img = new Image();
          img.onload = function() {
            console.log('‚úÖ Favicon loaded successfully');
            faviconLocked = false;
          };
          img.src = faviconDataUri;
          
          // Also try to set it directly on the document
          try {
            const existingIcon = document.querySelector('link[rel="icon"]');
            if (existingIcon) {
              existingIcon.href = faviconDataUri;
            }
          } catch(e) {
            // Ignore if not found
          }
          
          faviconLocked = false;
        }
        
        // Force favicon immediately
        forceFavicon();
        
        // Force favicon on every page load
        window.addEventListener('load', forceFavicon);
        document.addEventListener('DOMContentLoaded', forceFavicon);
        
        // Force favicon before page unload (during navigation)
        window.addEventListener('beforeunload', function() {
          forceFavicon();
        });
        
        // Force favicon on page visibility change
        document.addEventListener('visibilitychange', function() {
          if (!document.hidden) {
            forceFavicon();
          }
        });
        
        // Force favicon on focus (when user returns to tab)
        window.addEventListener('focus', forceFavicon);
        
        // Force favicon on every navigation event
        window.addEventListener('popstate', forceFavicon);
        
        // Override any browser default icon behavior
        document.addEventListener('DOMContentLoaded', function() {
          // Remove any default browser icons
          const defaultIcons = document.querySelectorAll('link[rel="icon"][href*="data:"]');
          defaultIcons.forEach(icon => icon.remove());
          
          // Ensure our favicon is the only one (check for data URI or file)
          const ourFavicon = document.querySelector('link[rel="icon"]');
          const faviconDataUri = "data:image/svg+xml,%3Csvg width='32' height='32' viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='16' cy='16' r='15' fill='%2314b8a6'/%3E%3Crect x='8' y='8' width='16' height='16' rx='2' ry='2' fill='white' stroke='none'/%3E%3Ctext x='16' y='20' font-family='Arial, sans-serif' font-size='12' font-weight='bold' text-anchor='middle' fill='%2314b8a6'%3E24%3C/text%3E%3C/svg%3E";
          if (!ourFavicon || (!ourFavicon.href.includes('data:image/svg+xml') && !ourFavicon.href.includes('/favicon.svg'))) {
            forceFavicon();
          }
        });
        
        // Continuous monitoring to prevent hand icon
        setInterval(function() {
          const currentFavicon = document.querySelector('link[rel="icon"]');
          const faviconDataUri = "data:image/svg+xml,%3Csvg width='32' height='32' viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='16' cy='16' r='15' fill='%2314b8a6'/%3E%3Crect x='8' y='8' width='16' height='16' rx='2' ry='2' fill='white' stroke='none'/%3E%3Ctext x='16' y='20' font-family='Arial, sans-serif' font-size='12' font-weight='bold' text-anchor='middle' fill='%2314b8a6'%3E24%3C/text%3E%3C/svg%3E";
